@model RegisterViewModel

<div class="login-page">
    <div class="lead">
        <h1>Register</h1>
        <p>Register a new user</p>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">
                    <h2>Local Account</h2>
                </div>

                <div class="card-body">
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div class="form-group">
                            <label asp-for="Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="EmailAddress"></label>
                            <input class="form-control" placeholder="Email" asp-for="EmailAddress" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName"></label>
                            <input class="form-control" placeholder="First name" asp-for="FirstName" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName"></label>
                            <input class="form-control" placeholder="Last name" asp-for="LastName" autocomplete="off">
                        </div>
                        

                        

                        <button class="btn btn-primary" name="button" value="register">Register</button>
                        <button class="btn btn-secondary" name="button" value="cancel">Cancel</button>
                        <br />
                        <a asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">Login</a>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>